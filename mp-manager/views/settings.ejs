<h1 class="section-heading">Basic Settings</h1>
<form class="form-group	row" method="post" action="/mp-manager/settings">
	<div class="form-group">
		<label class="col-md-3">Site Title</label>
		<div class="col-md-6">
			<input type="text" name="sitename" value="" class="form-control" />
		</div>
		<div class="clearfix"></div>
	</div>
	
	<div class="form-group">
		<label class="col-md-3">Tagline</label>
		<div class="col-md-6">
			<input type="text" name="tagline" value="" class="form-control" />
		</div>
		<div class="clearfix"></div>
	</div>
	
	<div class="form-group">
		<label class="col-md-3">Brief Description</label>
		<div class="col-md-6">
			<textarea type="text" name="sitename" value=""  class="form-control" rows="5" ></textarea>
		</div>
		<div class="clearfix"></div>
	</div>
	
	<div class="form-group">
		<label class="col-md-3">Webmaster Email</label>
		<div class="col-md-6">
			<input type="text" name="email" value="" class="form-control" />
		</div>
		<div class="clearfix"></div>
	</div>
	
	<div class="form-group	col-md-12">
		<input type="submit" name="tagline" value="Save" class="btn-info" />
	</div>
</form>