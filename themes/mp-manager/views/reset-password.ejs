<section class="container">
	<aside class="col-md-4	login-base">
		<div class="form-group" style="text-align: center;">
			<img src="/assets/mp-manager/images/logo.png" alt="" height="45" />
		</div>
		<form action="/mp-manager/login/reset-password" method="post" class="form-group" name="forgotPassword" ng-controller="ForgotPassword">
			<input type="hidden" name="token" value="<%=	locals.token	%>" />
			<input type="hidden" name="id" value="<%=	locals.userId	%>" />
			
			<div class="form-group">
				<label>Email</label>
				<input type="email" name="email" placeholder="Your email... e.g. admin@example.com" class="form-control" required />
			</div>
			
			<div class="form-group">
				<label>Password</label>
				<input type="password" name="password" placeholder="Password" class="form-control" required />
			</div>
			
			<div class="form-group">
				<label>Retype Password</label>
				<input type="password" name="repassword" placeholder="Retype Password" class="form-control" required />
			</div>
			
			<div class="form-group">
				<input type="submit" name="submit" value="Reset Password" class="btn-info" />
			</div>
		</form>
		<div class="">
			<div class="col-md-5">
				<a href="/mp-manager/login" title="Forgot Password.">Login Now</a>
			</div>
			<div class="col-md-2"> | </div>
			<div class="col-md-5">
				<a href="/mp-manager/register" title="Create a new account!">Create new account!</a>
			</div>
		</div>
	</aside>
</section>

